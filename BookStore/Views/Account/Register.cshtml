@model BookStore.Models.ViewModels.RegisterViewModel 
@{
    ViewData["Title"] = "Регистрация";
}
<div class="row align-items-start">
    <div class="card bg-light">
        <article class="card-body mx-auto">
            <h2>Регистрация</h2><hr />
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="form-group">
                    <input class="form-control" asp-for="Username" placeholder="Имя пользователя" />
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Email" placeholder="Электронный адрес" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Phone" placeholder="Номер телефона" />
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Password" placeholder="Пароль" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="ConfirmPassword" placeholder="Подтвердите пароль" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                </br>
                <button class="btn btn-primary" type="submit">Присоединиться</button>
            </form>
        </article>
    </div>
</div>
