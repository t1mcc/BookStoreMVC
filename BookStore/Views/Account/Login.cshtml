@model BookStore.Models.ViewModels.LoginViewModel 
 
@{
    ViewData["Title"] = "Войти";
}

<div class="row align-items-center">
    <div class="card bg-light">
        <article class="card-body mx-auto">
            <h2>Логин</h2><hr />
            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input class="form-control" asp-for="Email" placeholder="Электронный адрес" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Password" placeholder="Пароль" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe"></label>
                </div>
                </br>
                <button class="btn btn-primary" type="submit">Войти</button>
            </form>
        </article>
    </div>
</div>
