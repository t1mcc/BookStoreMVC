@model BookStore.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Добавить пользователя";
}

<div class="row">
    <div class="col-2">
        <partial name="_NavPartial" />
    </div>
    <div class="card col-10 bg-light">
        <article class="card-body mx-auto">
            <form asp-controller="Admin" asp-action="AddUser" method="post">
                <div class="form-group">
                    <input class="form-control" asp-for="UserName" placeholder="Имя пользователя" />
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Email" placeholder="Электронный адрес" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="PhoneNumber" placeholder="Номер телефона" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Password" placeholder="Пароль" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="ConfirmPassword" placeholder="Подтвердите пароль" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group">
                    <select asp-for="Role">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <button class="btn btn-primary" type="submit">Добавить пользователя</button>
            </form>
        </article>
    </div>
</div>